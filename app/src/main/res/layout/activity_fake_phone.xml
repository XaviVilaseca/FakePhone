<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xaviervilasecagarc.fakephone.FakePhoneActivity">

    <TextView
        android:id="@+id/edit_num"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_4"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/btn_4"
        android:layout_toRightOf="@+id/btn_4"
        android:text="5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_8"
        android:layout_alignBottom="@+id/btn_8"
        android:layout_alignLeft="@+id/btn_6"
        android:layout_alignStart="@+id/btn_6"
        android:text="9"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_8"
        android:layout_alignStart="@+id/btn_8"
        android:layout_below="@+id/btn_8"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_7"
        android:layout_alignBottom="@+id/btn_7"
        android:layout_alignLeft="@+id/btn_5"
        android:layout_alignStart="@+id/btn_5"
        android:text="8"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_4"
        android:layout_alignStart="@+id/btn_4"
        android:layout_below="@+id/btn_4"
        android:layout_marginTop="16dp"
        android:text="7"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_1"
        android:layout_alignStart="@+id/btn_1"
        android:layout_below="@+id/btn_1"
        android:layout_marginTop="16dp"
        android:text="4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_num"
        android:layout_alignStart="@+id/edit_num"
        android:layout_below="@+id/edit_num"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/btn_2"
        android:layout_alignBottom="@+id/btn_2"
        android:layout_alignRight="@+id/edit_num"
        android:layout_alignEnd="@+id/edit_num" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_1"
        android:layout_alignBottom="@+id/btn_1"
        android:layout_alignLeft="@+id/btn_5"
        android:layout_alignStart="@+id/btn_5"
        android:text="2"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_5"
        android:layout_alignBottom="@+id/btn_5"
        android:layout_alignEnd="@+id/edit_num"
        android:layout_alignRight="@+id/edit_num"
        android:text="6"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_7"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_7"
        android:layout_marginBottom="31dp"
        android:text="BORRAR" />

    <Button
        android:id="@+id/btn_llamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_borrar"
        android:layout_toEndOf="@+id/btn_9"
        android:layout_toRightOf="@+id/btn_9"
        android:text="LLAMAR" />

</RelativeLayout>
